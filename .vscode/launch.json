  "configurations": [
    {
      "type": "nwjs",
      "request": "attach",
      "name": "Attach to NWjs",
      "port": 9222,
      "webRoot": "${workspaceFolder}/_dist_",
      "reloadAfterAttached": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**/*.js",
        "injectGlobalHook.js",
        "/_snowpack/**/*.js",
        "/build/**/*.js"
      ]
    }
  ]
